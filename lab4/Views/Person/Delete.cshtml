@model Person
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete person</h1>

<form method="post" asp-action="DeleteP">
	<input asp-for="Id" hidden />
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-10">
		  <input asp-for="Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Address</label>
		<div class="col-sm-10">
			<input asp-for="Address" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Phone Number</label>
		<div class="col-sm-10">
			<input asp-for="PhoneNumber" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Birthday</label>
		<div class="col-sm-10">
			<input asp-for="Birthday" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Ticket Number</label>
		<div class="col-sm-10">
			<input asp-for="TicketNumber" disabled />
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Delete</button>
  </div>
</form>