@model Book
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete book</h1>
<form method="post" asp-action="DeleteP">
	<input asp-for="Id" hidden />
	<div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-10">
		  <input asp-for="Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Author</label>
		<div class="col-sm-10">
			<input asp-for="Author" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Price</label>
		<div class="col-sm-10">
			<input asp-for="Price" disabled />
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Delete book</button>
  </div>
</form>