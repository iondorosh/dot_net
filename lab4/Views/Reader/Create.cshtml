@model Reader

<h1>Add new reader</h1>
<form method="post">
  <div class="form-group row">
	  <label>Person</label>
	  <div class="col-sm-10">
		  <select asp-for="PersonId" asp-items="@ViewBag.Persons">
			<option>Choose person</option>
		  </select>
		  <span asp-validation-for="PersonId"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Book</label>
		<div class="col-sm-10">
			<select asp-for="BookId" asp-items="@ViewBag.Books">
				<option>Choose book</option>
			</select>
			<span asp-validation-for="BookId"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Date of issue</label>
		<div class="col-sm-10">
			<input asp-for="IssueDate"/>
			<span asp-validation-for="IssueDate"></span>
		</div>
  </div>
  <div class="form-group row">
		<label>Date return</label>
		<div class="col-sm-10">
			<input asp-for="ReturnDate"/>
			<span asp-validation-for="ReturnDate"></span>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Add reader</button>
  </div>
</form>
