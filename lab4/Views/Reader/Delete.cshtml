@model Reader
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete reader</h1>
<form method="post" asp-action="DeleteP">
	<input asp-for="Id" hidden />
	<div class="form-group row">
	  <label>Person</label>
	  <div class="col-sm-10">
		<input asp-for="Person.Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Book</label>
		<div class="col-sm-10">
			<input asp-for="Book.Name" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Date of issue</label>
		<div class="col-sm-10">
			<input asp-for="IssueDate" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Date return</label>
		<div class="col-sm-10">
			<input asp-for="ReturnDate" disabled />
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Add reader</button>
  </div>
</form>